{
  "kind": "collectionType",
  "collectionName": "Products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 5,
      "maxLength": 256
    },
    "category": {
      "model": "category"
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "inStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "photo": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "officialPage": {
      "type": "string"
    }
  }
}
